<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/imgProductHome"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="12dp"
        android:src="@drawable/img_default"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitleProduct"
        style="@style/SFProText_Regular"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="12dp"
        android:text="@string/title_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imgProductHome"
        app:layout_constraintTop_toTopOf="@+id/imgProductHome" />

    <TextView
        android:id="@+id/tvSellPrice"
        style="@style/SFProText_Semibold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:paddingStart="12dp"
        android:text="8.790.000 Ä‘"
        app:layout_constraintStart_toEndOf="@+id/imgProductHome"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleProduct" />

    <TextView
        android:id="@+id/tvSupplierSalePrice"
        style="@style/style_sell_price"
        android:layout_width="0dp"
        android:visibility="gone"
        android:layout_height="wrap_content"
        android:paddingStart="12dp"
        android:text="10.970.000"
        app:layout_constraintStart_toEndOf="@+id/imgProductHome"
        app:layout_constraintTop_toBottomOf="@+id/tvSellPrice" />
</androidx.constraintlayout.widget.ConstraintLayout>